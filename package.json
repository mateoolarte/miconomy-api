{
  "name": "miconomy-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app",
    "build": "yarn clean && tsc",
    "start": "node dist/app",
    "studio": "npx prisma studio",
    "migrate:dev": "npx prisma migrate dev",
    "migrate": "npx prisma migrate deploy",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "clean": "rm -rf dist",
    "test": "yarn generate:nexus && jest",
    "test:watch": "yarn generate:nexus && jest --watch",
    "test:coverage": "yarn generate:nexus && jest --coverage",
    "lint": "eslint . --ext .js,.ts,",
    "fmt": "prettier --write .",
    "pretty": "yarn fmt && yarn lint"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "@sendgrid/mail": "^7.6.0",
    "apollo-server": "^3.5.0",
    "bcrypt": "^5.0.1",
    "graphql": "^15.7.2",
    "graphql-scalars": "^1.13.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.1.0",
    "prisma": "^3.4.2",
    "typescript": "^4.4.4",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^3.0.3",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-jest": "^27.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "5.1.1",
    "graphql-request": "^3.6.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.0",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8"
  }
}
