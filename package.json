{
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": false,
      "node": true,
      "es6": true,
      "commonjs": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app",
    "build": "yarn clean && tsc",
    "start": "node dist/app",
    "studio": "npx prisma studio",
    "migrate:dev": "npx prisma migrate dev",
    "migrate": "npx prisma migrate deploy",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "clean": "rm -rf dist",
    "test": "yarn generate:nexus && jest",
    "test:watch": "yarn generate:nexus && jest --watch",
    "test:coverage": "yarn generate:nexus && jest --coverage",
    "lint": "eslint . --ext .js,.ts,",
    "fmt": "prettier --write .",
    "pretty": "yarn fmt && yarn lint"
  },
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@prisma/client": "^4.16.2",
    "bcrypt": "^5.1.0",
    "graphql": "^16.7.1",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^9.0.1",
    "nexus": "^1.3.0",
    "prisma": "^4.16.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-typescript": "^7.22.5",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "babel-jest": "^29.6.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "get-port": "5.1.1",
    "graphql-request": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nanoid": "^4.0.2",
    "pg": "^8.11.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  }
}
