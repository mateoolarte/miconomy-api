{
  "name": "miconomy-api",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app",
    "build": "yarn clean && yarn generate:nexus && tsc",
    "start": "node dist/app",
    "studio": "npx prisma studio",
    "test": "yarn generate && jest",
    "test:watch": "yarn generate:nexus && jest --watch",
    "clean": "rm -rf dist",
    "migrate:dev": "npx prisma migrate dev --preview-feature",
    "migrate": "npx prisma migrate deploy --preview-feature",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema"
  },
  "engines": {
    "node": ">= 15"
  },
  "dependencies": {
    "@prisma/client": "^2.22.0",
    "@sendgrid/mail": "^7.4.4",
    "apollo-server": "^2.24.0",
    "bcrypt": "^5.0.1",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.3",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.0.0",
    "prisma": "^2.22.0",
    "typescript": "^4.2.4",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcrypt": "^3.0.1",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.0.2",
    "@types/node-fetch": "^2.5.10",
    "@types/pg": "^7.14.11",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "get-port": "^5.1.1",
    "graphql-request": "^3.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nanoid": "^3.1.22",
    "pg": "^8.6.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6"
  }
}
