{
  "name": "miconomy-api",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": { "warnOnly": true }
      }
    },
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }],
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": false,
      "node": true,
      "es6": true,
      "commonjs": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app",
    "build": "yarn clean && tsc",
    "start": "node dist/app",
    "studio": "npx prisma studio",
    "migrate:dev": "npx prisma migrate dev",
    "migrate": "npx prisma migrate deploy",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "clean": "rm -rf dist",
    "test": "yarn generate:nexus && jest",
    "test:watch": "yarn generate:nexus && jest --watch",
    "test:coverage": "yarn generate:nexus && jest --coverage",
    "lint": "eslint . --ext .js,.ts,",
    "fmt": "prettier --write .",
    "pretty": "yarn fmt && yarn lint"
  },
  "engines": {
    "node": ">= 17"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "apollo-server": "^3.8.1",
    "bcrypt": "^5.0.1",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.3.0",
    "prisma": "^3.14.0",
    "typescript": "^4.7.2",
    "ts-node": "^10.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.36",
    "@types/node-fetch": "^2.6.1",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "5.1.1",
    "graphql-request": "^4.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "nanoid": "^3.3.4",
    "pg": "^8.7.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "ts-node-dev": "^2.0.0"
  }
}
