{
  "name": "miconomy-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app",
    "build": "yarn clean && tsc",
    "start": "node dist/app",
    "studio": "npx prisma studio",
    "migrate:dev": "npx prisma migrate dev",
    "migrate": "npx prisma migrate deploy",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "clean": "rm -rf dist",
    "test": "yarn generate:nexus && jest",
    "test:watch": "yarn generate:nexus && jest --watch",
    "test:coverage": "yarn generate:nexus && jest --coverage",
    "lint": "eslint . --ext .js,.ts,",
    "fmt": "prettier --write .",
    "pretty": "yarn fmt && yarn lint"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "apollo-server": "^3.6.2",
    "bcrypt": "^5.0.1",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.14.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.2.0",
    "prisma": "^3.9.1",
    "typescript": "^4.5.5",
    "ts-node": "^10.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.16",
    "@types/node-fetch": "^3.0.3",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-jest": "^27.5.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "5.1.1",
    "graphql-request": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.0",
    "lint-staged": "^12.3.3",
    "nanoid": "^3.2.0",
    "pg": "^8.7.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  }
}
