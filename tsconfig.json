{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
